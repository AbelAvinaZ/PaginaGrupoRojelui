<% layout("layouts/boilerplate") %>

    <div class="row">
        <h1 class="text-center">Editar Personal</h1>
        <div class="col-6 offset-3">
            <form action="/personal/<%= personal._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Nombre</label>
                    <input class="form-control" type="text" id="name" name="personal[name]" value="<%= personal.name %>" required>
                </div>
                <div class="mb-3">
                    <label for="workstation" class="form-label">Puesto de Trabajo</label>
                    <select class="form-select form-select-sm" aria-label="Default select example" id="workstation" name="personal[workstation]" value="<%= personal.workstation %>" required>
                        <option value="Garrotero">Garrotero</option>
                        <option value="Mesero">Mesero</option>
                        <option value="Barista">Barista</option>
                      </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Locaci√≥n</label>
                    <input class="form-control" type="text" id="location" name="personal[location]" value="<%= personal.location %>" required>
                </div>
                <div class="mb-3">
                    <div class="form-file">
                    <label for="image" class="form-label">Agregar imagen(es)...</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                  </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="birthdate">Fecha de Nacimiento</label>
                    <input class="form-control" type="date" id="birthdate" name="personal[birthdate]" value="<%= personal.birthdate %>" data-date-format="mm/dd/yyyy">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="startdate">Fecha de Ingreso</label>
                    <input class="form-control" type="date" id="startdate" name="personal[startdate]" value="<%= personal.startdate %>" data-date-format="mm/dd/yyyy" required>
                </div>
                <div class="mb-3">
                    <% personal.images.forEach(function(img, i) { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="image-<%= i %>">Borrar imagen</label>
                        <% }) %>
                </div>
                <div class="mb-3">
                <button class="btn btn-info">Guardar</button>
            </div>
            </form>
            <a href="/personal/<%= personal._id %>">Personal</a>        
        </div>
    </div>
    