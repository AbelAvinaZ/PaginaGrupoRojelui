<% layout("layouts/boilerplate") %>

    <h1>Personal</h1>
    <div>
        <a href="/personal/new">Agrega nuevo personal</a>
    </div>
    
        <% for (let personal of personals) { %>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%= personal.image %>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= personal.name %></h5>
                            <p class="card-text"><%= personal.location %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= personal.workstation %></small>
                            </p>
                            <a href="/personal/<%= personal._id %>" class="btn btn-primary">Ver a <%= personal.name %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    
